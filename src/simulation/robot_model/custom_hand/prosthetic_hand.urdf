<?xml version="1.0"?>
<!-- Prosthetic 3-Finger Hand URDF (anatomical wrist ordering: flex (pitch), deviation (roll), rotation (yaw))
     3 DOF wrist + 3 fingers (thumb, index, middle_coupled), each with 2 revolute joints.
     Visuals use cylinders and boxes arranged to look like finger phalanges for improved realism.
-->
<robot name="prosthetic_3f_realistic">

  <!-- base (forearm) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.2"/>
      <inertia  ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.015"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.045"/>
      </geometry>
      <material name="metal_dark">
        <color rgba="0.45 0.45 0.45 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.045"/>
      </geometry>
    </collision>
  </link>

  <!-- Wrist pitch: flex/extend (joint 0) -->
  <link name="wrist_pitch_link">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_flex" type="revolute">
    <parent link="base_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="1.2" effort="25" velocity="3.0"/>
  </joint>

  <!-- Wrist roll: radial/ulnar deviation (joint 1) -->
  <link name="wrist_roll_link">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.04 0.04"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_dev" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.9" upper="0.9" effort="20" velocity="3.0"/>
  </joint>

  <!-- Wrist yaw: pronation/supination (joint 2) -->
  <link name="wrist_yaw_link">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_rotate" type="revolute">
    <parent link="wrist_roll_link"/>
    <child link="wrist_yaw_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="15" velocity="4.0"/>
  </joint>

  <!-- Palm / hand base -->
  <link name="palm_link">
    <visual>
      <origin xyz="0.06 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.14 0.08 0.03"/>
      </geometry>
      <material name="palm_mat">
        <color rgba="0.4 0.4 0.4 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="palm_mount" type="fixed">
    <parent link="wrist_yaw_link"/>
    <child link="palm_link"/>
    <origin xyz="0.04 0 0.03" rpy="0 0 0"/>
  </joint>

  <!-- Thumb -->
  <link name="thumb_base"/>
  <joint name="thumb_base_joint" type="fixed">
    <parent link="palm_link"/>
    <child link="thumb_base"/>
    <origin xyz="0.09 0.03 0.02" rpy="0 0 0"/>
  </joint>

  <link name="thumb_proximal">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.06" radius="0.01"/>
      </geometry>
    </visual>
  </link>
  <joint name="thumb_proximal_joint" type="revolute">
    <parent link="thumb_base"/>
    <child link="thumb_proximal"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="1.2" effort="8" velocity="3.0"/>
  </joint>

  <link name="thumb_distal">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.009"/>
      </geometry>
    </visual>
  </link>
  <joint name="thumb_distal_joint" type="revolute">
    <parent link="thumb_proximal"/>
    <child link="thumb_distal"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="1.5" effort="6" velocity="3.0"/>
  </joint>

  <!-- Index finger -->
  <link name="index_base"/>
  <joint name="index_base_joint" type="fixed">
    <parent link="palm_link"/>
    <child link="index_base"/>
    <origin xyz="0.09 0.015 0.02" rpy="0 0 0"/>
  </joint>

  <link name="index_proximal">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.009"/>
      </geometry>
    </visual>
  </link>
  <joint name="index_proximal_joint" type="revolute">
    <parent link="index_base"/>
    <child link="index_proximal"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="0.1" effort="8" velocity="4.0"/>
  </joint>

  <link name="index_distal">
    <visual>
      <origin xyz="0.035 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.06" radius="0.0085"/>
      </geometry>
    </visual>
  </link>
  <joint name="index_distal_joint" type="revolute">
    <parent link="index_proximal"/>
    <child link="index_distal"/>
    <origin xyz="0.07 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="1.6" effort="6" velocity="4.0"/>
  </joint>

  <!-- Middle / coupled finger -->
  <link name="middle_base"/>
  <joint name="middle_base_joint" type="fixed">
    <parent link="palm_link"/>
    <child link="middle_base"/>
    <origin xyz="0.09 -0.015 0.02" rpy="0 0 0"/>
  </joint>

  <link name="middle_proximal">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.0095"/>
      </geometry>
    </visual>
  </link>
  <joint name="middle_proximal_joint" type="revolute">
    <parent link="middle_base"/>
    <child link="middle_proximal"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="0.1" effort="8" velocity="4.0"/>
  </joint>

  <link name="middle_distal">
    <visual>
      <origin xyz="0.04 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.06" radius="0.0085"/>
      </geometry>
    </visual>
  </link>
  <joint name="middle_distal_joint" type="revolute">
    <parent link="middle_proximal"/>
    <child link="middle_distal"/>
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="1.6" effort="6" velocity="4.0"/>
  </joint>

</robot>
